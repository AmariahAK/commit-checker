{
  "name": "commit-checker",
  "displayName": "Commit Checker - GitHub Streak Tracker",
  "description": "Track commits, XP, achievements, and maintain your GitHub streak directly in VS Code",
  "version": "0.8.0",
  "publisher": "amariahak",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmariahAK/commit-checker"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["SCM Providers", "Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-checker.showDashboard",
        "title": "Commit Checker: Show Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "commit-checker.refreshStats",
        "title": "Commit Checker: Refresh Stats",
        "icon": "$(refresh)"
      },
      {
        "command": "commit-checker.addTIL",
        "title": "Commit Checker: Add TIL Entry",
        "icon": "$(notebook)"
      },
      {
        "command": "commit-checker.searchTIL",
        "title": "Commit Checker: Search TIL"
      },
      {
        "command": "commit-checker.viewAchievements",
        "title": "Commit Checker: View Achievements"
      }
    ],
    "configuration": {
      "title": "Commit Checker",
      "properties": {
        "commit-checker.cliPath": {
          "type": "string",
          "default": "commit-checker",
          "description": "Path to commit-checker CLI command (use 'commit-checker' if installed globally)"
        },
        "commit-checker.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "Dashboard refresh interval in seconds (default: 5 minutes)"
        },
        "commit-checker.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show commit streak and XP in status bar"
        },
        "commit-checker.enableCoaching": {
          "type": "boolean",
          "default": true,
          "description": "Enable commit message coaching suggestions"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-checker-sidebar",
          "title": "Commit Checker",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "commit-checker-sidebar": [
        {
          "id": "commit-checker.dashboard",
          "name": "Dashboard",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {}
}
